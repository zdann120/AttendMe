p#notice = notice
p.lead
  - if @event.schedule.occurring_at?(Time.zone.now)
    == 'OCCURRING RIGHT NOW!'

p
  strong User: 
  = @event.user.email
p
  strong Begins: 
  = @event.begins
p
  strong Ends: 
  = @event.ends
p
  strong Repeat rule: 
  code = @event.schedule.to_s
p
  strong Title: 
  = @event.title
p
  strong Description: 
  = @event.description
.row
  .col-md-6

    h2 Upcoming Occurrences
    table.table
      - @event.remaining_occurrences.each do |o|
        tr
          td == o
          td 
            == form_for EventException.new, 
              url: event_event_exceptions_path(@event), method: :post do |f|
              == f.hidden_field :skip_time, value: o.to_datetime.to_s
              == f.submit 'Cancel', class: 'btn btn-link' if @event.schedule.occurring_at?(o)
  .col-md-6
    h2 Exceptions
    table.table
      tr
        th Event will not occur on...
        th Actions
      - @event.event_exceptions.order(skip_time: :asc).each do |ee|
        tr
          td == FormatExceptionDate.new(ee.skip_time).to_s
          td == link_to "Remove Exception",
            event_event_exception_path(@event, ee.skip_time), method: :delete

= link_to 'Edit', edit_event_path(@event)
'|
= link_to 'Back', events_path
